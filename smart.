let cart = JSON.parse(localStorage.getItem("cart")) || [];
let currentCategory = "all";
let displayedProducts = [...allProducts];

const productsGrid = document.getElementById("productsGrid");
const cartItemsDiv = document.getElementById("cartItems");
const totalSpan = document.getElementById("total");
const subtotalSpan = document.getElementById("subtotal");
const cartCountSpan = document.getElementById("cartCount");
const cartSummary = document.getElementById("cartSummary");
const checkoutBtn = document.getElementById("checkoutBtn");

function renderProducts() {
    productsGrid.innerHTML = "";
    
    if (displayedProducts.length === 0) {
        productsGrid.innerHTML = '<div style="grid-column: 1/-1; text-align: center; padding: 40px; color: #999;">No products found</div>';
        return;
    }

    displayedProducts.forEach(product => {
        const productCard = document.createElement("div");
        productCard.className = "product-card";
        productCard.innerHTML = `
            <img src="${product.image}" alt="${product.name}" class="product-image">
            <div class="product-info">
                <div class="product-name">${product.name}</div>
                <div class="product-rating">
                    <span class="stars">â˜…â˜…â˜…â˜…â˜…</span>
                    <span class="rating-count">${product.rating} (${product.reviews})</span>
                </div>
                ${product.prime ? '<div class="prime-badge">âœ“ Prime</div>' : ''}
                <div class="product-price">
                    $${product.price}
                    <span class="product-original-price">$${product.originalPrice}</span>
                    <span class="product-discount">${product.discount}% off</span>
                </div>
                <button class="add-to-cart-btn" onclick="addToCart(${product.id})">
                    Add to Cart
                </button>
            </div>
        `;
        productsGrid.appendChild(productCard);
    });
}

function addToCart(id) {
    const product = allProducts.find(p => p.id === id);
    const cartItem = cart.find(item => item.id === id);
    
    if (cartItem) {
        cartItem.qty++;
    } else {
        cart.push({ ...product, qty: 1 });
    }
    
    saveCart();
    renderCart();
}

function removeFromCart(id) {
    cart = cart.filter(item => item.id !== id);
    saveCart();
    renderCart();
}

function updateQuantity(id, change) {
    const item = cart.find(item => item.id === id);
    if (item) {
        item.qty += change;
        if (item.qty <= 0) {
            removeFromCart(id);
        } else {
            saveCart();
            renderCart();
        }
    }
}

function renderCart() {
    cartItemsDiv.innerHTML = "";
    
    if (cart.length === 0) {
        cartItemsDiv.innerHTML = '<div class="empty-cart">Your cart is empty</div>';
        cartSummary.style.display = "none";
        checkoutBtn.style.display = "none";
        cartCountSpan.textContent = "0";
        return;
    }

    let total = 0;
    let count = 0;

    cart.forEach(item => {
        total += item.price * item.qty;
        count += item.qty;
        
        const cartItem = document.createElement("div");
        cartItem.className = "cart-item";
        cartItem.innerHTML = `
            <div class="cart-item-name">
                <strong>${item.name}</strong><br>
                $${item.price} x ${item.qty}
            </div>
            <div class="cart-item-controls">
                <button class="qty-btn" onclick="updateQuantity(${item.id}, -1)">âˆ’</button>
                <span>${item.qty}</span>
                <button class="qty-btn" onclick="updateQuantity(${item.id}, 1)">+</button>
                <button class="remove-btn" onclick="removeFromCart(${item.id})">Remove</button>
            </div>
        `;
        cartItemsDiv.appendChild(cartItem);
    });

    subtotalSpan.textContent = total.toFixed(2);
    totalSpan.textContent = total.toFixed(2);
    cartCountSpan.textContent = count;
    cartSummary.style.display = "block";
    checkoutBtn.style.display = "block";
}

function filterByCategory(category) {
    currentCategory = category;
    filterProducts();
}

function filterProducts() {
    let filtered = allProducts;

    // Category filter
    if (currentCategory !== "all") {
        filtered = filtered.filter(p => p.category === currentCategory);
    }

    // Search filter
    const searchTerm = document.getElementById("searchInput").value.toLowerCase();
    if (searchTerm) {
        filtered = filtered.filter(p => 
            p.name.toLowerCase().includes(searchTerm) || 
            p.category.toLowerCase().includes(searchTerm)
        );
    }

    // Price filter
    const priceCheckboxes = document.querySelectorAll(".price-range input");
    const selectedPrices = [];
    priceCheckboxes.forEach((checkbox, index) => {
        if (checkbox.checked) selectedPrices.push(index);
    });

    if (selectedPrices.length > 0) {
        filtered = filtered.filter(p => {
            for (let i of selectedPrices) {
                if (i === 0 && p.price < 50) return true;
                if (i === 1 && p.price >= 50 && p.price < 100) return true;
                if (i === 2 && p.price >= 100 && p.price < 500) return true;
                if (i === 3 && p.price >= 500) return true;
            }
            return false;
        });
    }

    // Rating filter
    const ratingCheckboxes = document.querySelectorAll(".filter-group:nth-child(2) input");
    const selectedRatings = [];
    ratingCheckboxes.forEach((checkbox, index) => {
        if (checkbox.checked) selectedRatings.push(index);
    });

    if (selectedRatings.length > 0) {
        filtered = filtered.filter(p => {
            if (selectedRatings.includes(0) && p.rating >= 4) return true;
            if (selectedRatings.includes(1) && p.rating >= 3) return true;
            return false;
        });
    }

    // Prime filter
    const primeCheckbox = document.querySelectorAll(".filter-group:nth-child(3) input")[0];
    if (primeCheckbox && primeCheckbox.checked) {
        filtered = filtered.filter(p => p.prime);
    }

    displayedProducts = filtered;
    renderProducts();
}

function sortProducts(sortBy) {
    let sorted = [...displayedProducts];

    if (sortBy === "price-low") {
        sorted.sort((a, b) => a.price - b.price);
    } else if (sortBy === "price-high") {
        sorted.sort((a, b) => b.price - a.price);
    } else if (sortBy === "rating") {
        sorted.sort((a, b) => b.rating - a.rating);
    } else if (sortBy === "newest") {
        sorted.reverse();
    }

    displayedProducts = sorted;
    renderProducts();
}

function scrollToCart() {
    document.getElementById("cartSidebar").scrollIntoView({ behavior: "smooth" });
}

function checkout() {
    if (cart.length === 0) {
        alert("Your cart is empty!");
        return;
    }
    alert(`Order placed successfully!\nTotal: $${(cart.reduce((sum, item) => sum + (item.price * item.qty), 0)).toFixed(2)}`);
    cart = [];
    saveCart();
    renderCart();
}

function saveCart() {
    localStorage.setItem("cart", JSON.stringify(cart));
}

// Initialize
renderProducts();
renderCart();
</script>

</body>
</html>
